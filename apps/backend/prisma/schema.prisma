generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum EventBackgroundType {
  NONE
  IMAGE
  VIDEO
}

model AdminUser {
  id           String   @id @default(uuid())
  username     String   @unique
  passwordHash String
  displayName  String?
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt @default(now())
}

model Event {
  id                    String               @id @default(uuid())
  name                  String
  date                  DateTime?
  time                  String?              // Event time in format "HH:mm", e.g. "09:00"
  location              String?
  logoUrl               String?
  backgroundType        EventBackgroundType  @default(NONE)
  backgroundImageUrl    String?
  backgroundVideoUrl    String?
  overlayOpacity        Float                @default(0.5)
  checkinPopupTimeoutMs Int                  @default(5000)
  enablePhotoCapture    Boolean              @default(false)
  isActive              Boolean              @default(false)
  enableLuckyDraw       Boolean              @default(false)
  enableSouvenir        Boolean              @default(false)
  allowDuplicateGuestId Boolean              @default(false)
  allowMultipleCheckin  Boolean              @default(false)
  maxCheckinCount       Int                  @default(1)
  allowMultipleCheckinPerCounter Boolean     @default(false) // Allow 1 check-in per admin/counter
  requireCheckinForSouvenir Boolean         @default(true)  // Require check-in before taking souvenir/consumption
  customCategories      Json?                // Array of {value: string, label: string, color: string}
  createdAt             DateTime             @default(now())
  updatedAt             DateTime             @updatedAt
  guests                Guest[]
  prizes                Prize[]
  souvenirs             Souvenir[]
}

enum GuestCategory {
  REGULAR
  VIP
  VVIP
  MEDIA
  SPONSOR
  SPEAKER
  ORGANIZER
}

enum RegistrationSource {
  MANUAL
  IMPORT
  WALKIN
}

model Guest {
  id              String        @id @default(uuid())
  queueNumber     Int
  guestId         String
  name            String
  email           String?
  phone           String?
  photoUrl        String?
  tableLocation   String
  company         String?
  department      String?
  division        String?
  notes           String?
  category        GuestCategory @default(REGULAR)
  registrationSource RegistrationSource @default(MANUAL)
  checkedIn       Boolean       @default(false)
  checkedInAt     DateTime?
  checkedInById   String?
  checkedInByName String?
  checkinCount    Int           @default(0)
  souvenirTaken   Boolean       @default(false)
  emailSent       Boolean       @default(false)
  emailSentAt     DateTime?
  prizeWins       PrizeWinner[]
  souvenirTakes   SouvenirTake[]
  emailLogs       EmailLog[]
  checkins        GuestCheckin[]
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  eventId         String
  event           Event         @relation(fields: [eventId], references: [id], onDelete: Cascade)

  // Performance indexes
  @@index([eventId])
  @@index([eventId, checkedIn])
  @@index([eventId, guestId])
  @@index([eventId, category])
  @@index([name])
  @@index([company])
  @@index([queueNumber])
}

// Track multiple check-ins per guest from different admins/counters
model GuestCheckin {
  id            String   @id @default(uuid())
  guestId       String
  guest         Guest    @relation(fields: [guestId], references: [id], onDelete: Cascade)
  checkinAt     DateTime @default(now())
  checkinById   String?
  checkinByName String?
  counterName   String?  // Optional: name of the counter/station

  @@index([guestId])
  @@index([checkinById])
}

model Prize {
  id                String        @id @default(uuid())
  name              String
  description       String?
  imageUrl          String?
  quantity          Int           @default(1)
  category          String        @default("HIBURAN") // HIBURAN, UTAMA
  allowMultipleWins Boolean       @default(false)
  eventId           String
  event             Event         @relation(fields: [eventId], references: [id], onDelete: Cascade)
  prizeWinners      PrizeWinner[]
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  @@index([eventId])
}

model PrizeWinner {
  id        String   @id @default(uuid())
  guestId   String
  guest     Guest    @relation(fields: [guestId], references: [id], onDelete: Cascade)
  prizeId   String
  prize     Prize    @relation(fields: [prizeId], references: [id], onDelete: Cascade)
  wonAt     DateTime @default(now())
  collection PrizeCollection?

  @@index([guestId])
  @@index([prizeId])
  @@unique([guestId, prizeId])
}

model AuditLog {
  id          String   @id @default(uuid())
  action      String
  metadata    Json?
  adminUserId String?
  createdAt   DateTime @default(now())
}

// Souvenir inventory management
model Souvenir {
  id          String         @id @default(uuid())
  name        String
  description String?
  imageUrl    String?
  quantity    Int            @default(1)
  eventId     String
  event       Event          @relation(fields: [eventId], references: [id], onDelete: Cascade)
  takes       SouvenirTake[]
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  @@index([eventId])
}

// Track souvenir distribution to guests
model SouvenirTake {
  id            String    @id @default(uuid())
  guestId       String
  guest         Guest     @relation(fields: [guestId], references: [id], onDelete: Cascade)
  souvenirId    String
  souvenir      Souvenir  @relation(fields: [souvenirId], references: [id], onDelete: Cascade)
  takenAt       DateTime  @default(now())
  takenById     String?
  takenByName   String?

  @@index([guestId])
  @@index([souvenirId])
  @@unique([guestId, souvenirId])
}

// Track prize collection for lucky draw winners
model PrizeCollection {
  id            String   @id @default(uuid())
  prizeWinnerId String   @unique
  prizeWinner   PrizeWinner @relation(fields: [prizeWinnerId], references: [id], onDelete: Cascade)
  collectedAt   DateTime @default(now())
  collectedById String?
  collectedByName String?
}

// Email settings for SMTP configuration
model EmailSettings {
  id              String   @id @default(uuid())
  smtpHost        String
  smtpPort        Int      @default(587)
  smtpSecure      Boolean  @default(false)
  smtpUser        String
  smtpPass        String   // encrypted
  senderName      String
  senderEmail     String
  emailSubject    String   @default("Undangan Event")
  emailTemplate   String?  @db.Text // HTML template with placeholders
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// Track sent emails
model EmailLog {
  id          String   @id @default(uuid())
  guestId     String
  guest       Guest    @relation(fields: [guestId], references: [id], onDelete: Cascade)
  eventId     String
  recipient   String
  subject     String
  status      String   // sent, failed, pending
  errorMessage String?
  sentAt      DateTime @default(now())
  sentById    String?
  sentByName  String?

  @@index([guestId])
  @@index([eventId])
  @@index([status])
}
